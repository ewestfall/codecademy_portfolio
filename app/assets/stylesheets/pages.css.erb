body {
	font-family: 'Roboto', sans-serif;
	font-size: 12px;
}

body a {
	color: inherit;
}

/* nav */

#header {
	width: 100%;
	height: 100px;
	font-size: 18px;
}

#nav {
	padding-left: 0px;
	padding-top: 35px
}

#nav li {
	text-decoration: none;
	display: inline;
	margin-right: 40px;
	cursor: pointer;

}

#nav li:hover {
	text-decoration: underline;
}

#nav .name {
	float: right;
	margin-right: 0;
}

/* footer */

#footer {
	margin-bottom: 30px;
}

#footer ul{
	float: right;
}

#footer li {
	text-decoration: none;
	display: inline;
	margin-left: 10px;
}

#footer img {
	width: 24px;
}

#footer #copyright {
	float: right;
	clear: both;
}

/* all pages */

.main {
	padding: 0;
}

/* welcome */

#welcome .jumbotron {
	background-image: url(http://www.wallpapersworld.net/user-content/uploads/wall/o/71/hawaii-venice-falls-maui_98990.jpg);
	background-size: cover;
	background-position: 0px -40px;
	background-repeat: no-repeat;
	height: 500px;
}

#welcome h1 {
	color: white;
	text-align: right;
	font-weight: 700;
	width: 500px;
	float: right;
	margin-top: 100px;
}

#welcome h1 span {
	background-color: white;
	color: black;
	padding-left: 20px;
	padding-right: 20px;
}

#welcome button {
	float: right;
	clear: both;
	padding: 10px 40px 10px 40px;
	border-radius: 0;
	border: none;
	background-color: black;
	color: white;
	font-size: 16px;
	font-weight: 100;
	margin-top: 50px;
}

/* portfolio */

#portfolio .banner { 
	position: relative;
	overflow: auto; 
}

#portfolio .banner li { 
	list-style: none;
	float: left;
}

#portfolio .banner ul {
	padding-left: 0;
}

#portfolio .banner img {
	height: 500px;
}

#portfolio .banner .img {
	text-align: center
}

#portfolio .jumbotron {
	height: 500px;
	padding: 0px;
}

.banner .one {
	background-color: black;
}

.banner .two {
	background-color: white;
}

.banner .three {
	background-color: black;
}

#portfolio .row {
	margin: 25px;
}

#portfolio .project {
	margin: 25px;
}

.project img {
	width: 100%;
	border: 1px solid lightgrey;
}

#portfolio a {
	transition: color .5s ease-in-out;
}

#portfolio a:hover {
	text-decoration: none;
	color: #ff3b4e;
}






